{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "HorizontalLayout",
      "elements": [
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Group",
              "label": "Company Details",
              "elements": [
                {
                  "type": "VerticalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/companyDetails/properties/title"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/companyDetails/properties/companyName"
                    },
                    {
                      "type": "Control",
                      "scope": "#/properties/companyDetails/properties/aboutCompany",
                      "option": {
                        "multi": true
                      }
                    }
                  ]
                },
                {
                  "type": "HorizontalLayout",
                  "elements": [
                    {
                      "type": "Control",
                      "scope": "#/properties/companyDetails/properties/postedDate"
                    }
                  ]
                },
                {
                  "type": "Control",
                  "scope": "#/properties/companyDetails/properties/location"
                }
              ]
            }
          ]
        },
        {
          "type": "VerticalLayout",
          "elements": [
            {
              "type": "Group",
